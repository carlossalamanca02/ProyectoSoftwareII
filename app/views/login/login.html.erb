<div class="container h-100" style="background:black">
    <div class="row justify-content-center">
        <div class="col-sm-12">
            <h1>
            <img src="<%=asset_path 'header.jpeg'%>" id="cabecera">
            </h1>
            <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col align-self-start">
                            <a class="navbar-brand" href="/"><img src="<%=asset_path 'uptc.jpeg'%>" id="imagen"></a>
                            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                                <span class="navbar-toggler-icon"></span>
                            </button>
                        </div>
                        <div class="col align-self-end">
                        <div class="collapse navbar-collapse" id="navbarSupportedContent">
                            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                                <!-- No logueado --> 
                                <% if !user_signed_in? %>
                                    <li class="nav-item">
                                      <%= link_to "Ingresar", new_user_session_path, class:"nav-link active"%>  
                                    </li>
                                    <li class="nav-item">
                                      <%= link_to "Registrarse", new_user_registration_path, class:"nav-link active"%>  
                                    </li>
                                <%end%>
                                <!-- Logueado --> 
                                <% if user_signed_in? %>
                                    <li class="nav-item">
                                      <%= link_to "Cerrar sesion", destroy_user_session_path,method: :delete,  class:"nav-link active"%>  
                                    </li>
                                <%end%>
                            </ul>
                        </div>
                        
                    </div> 
                    </div>  
                </div>                    
            </nav>
            <div class="container" style="background:#FFFFFF">
                 <img src="<%=asset_path 'inicio.jpg'%>" id="inicio">
