<div class="row justify-content-center col mb-3">
                <div class="col-sm-12 aling-self-center">
                    <div class="container" id="contenedorLogo">
                        <h2 style="text-align: center">AÑADIR PARTICIPANTE</h2>
                        <div class="row justify-content-center col mb-3" >
                            <div class="col-sm-6">   
                            <%= form_with url: "/groups/Addparticipants" do |g| %> 
                                <% if Group.where(user_id:current_user.id).count >0 %>
                                            
                                    <div class="row justify-content-center">
                                        <div class="col-sm-12 col mb-3">
                                            <%= g.select :group_name, method: :put do %>
                                                <% Group.where(user_id:current_user.id).each do |c| -%>
                                                    <%= content_tag(:option, c.name, value: c.id, class:"form-control form-control-lg col mb-3") %>
                                                <% end %>
                                            <% end %>
                                        </div>
                                        <div class="col-sm-12 col mb-3">
                                            <%= g.text_field :ParticipantCode, autofocus: true, autocomplete: "participantCode",class:"form-control form-control-lg", id:"codigoParticipante", placeholder:"Codigo" %>
                                        </div>
                                        <div class="col-sm-12 col mb-3">
                                        <%= g.text_field :ParticipantName, autofocus: true, autocomplete: "participantName",class:"form-control form-control-lg", id:"nombreParticipante", placeholder:"Nombre y apellido" %>    
                                        </div>
                                        <div class="col-sm-12 col mb-3">
                                            <select name="ParticipantCarrer"id="carreraParticipante" class="form-control form-control-lg">
                                                <option value="1">Seleccione una carrera...</option>
                                                <option value="2">Ing.Sistemas y computación</option>
                                                <option value="3">Ing.Electronica</option>
                                                <option value="4">Ing.Industrial</option>
                                                <option value="5">Ing.Minas</option>
                                                <option value="6">Finanzas y comercio internacional</option>
                                                <option value="7">Administración de empresas</option>
                                                <option value="8">Contaduria</option>
                                                <option value="9">Administración industrial</option>
                                            </select>
                                        </div>
                                        <div class="col-sm-12 col mb-3">
                                        <%= g.email_field :ParticipantEmail, autofocus: true, autocomplete: "email",class:"form-control form-control-lg", id:"correoParticipante", placeholder:"Correo" %>
                                        </div>
                                    </div>
                                    <div class="row justify-content-center col mb-3">
                                        <div class="col-sm-3">
                                             <%= g.submit "Añadir",class:"btn btn-secondary", id:"btnModificar" %>
                                            
                                        </div>
                                        <div class="col-sm-3">
                                            <button class="btn btn-secondary" type="reset">Limpiar</button>
                                        </div>
                                    </div>

                                <% end %>
                                <% if Group.where(user_id:current_user.id).count == 0 %>
                                    <p>No cuentas con grupos registrados</p>
                                <% end %>
                            
                            
                            <% end %>
                            </div>
                            <div class="col-sm-6">
                                <div class="container" style="background: rgba(225, 222, 215,0.4)">
                                    <h5 style="text-align: center">Participantes</h5>
                                    <table class="table">
                                        <thead class="thead-dark">
                                        <tr>
                                            <th scope="col">Codigo</th>
                                            <th scope="col">Participantes</th>
                                        </tr>
                                        </thead>
                                        <tbody id="tablaGrupos">
                                        </tbody>
                                    </table>

                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>