<div class="row justify-content-center col mb-3">
    <div class="col-sm-9 aling-self-center">
        <div class="container" id="contenedorLogo">
            <div class="row justify-content-center">
                <div class="col-sm-12">
                    <h2 style="text-align: center">CREAR GRUPO</h2>
                    <%= form_for(@GrNew) do |f| %>
                        <div class="row justify-content-center">
                        <div class="col-sm-8 col mb-3">
                            <%= f.text_field :id, autofocus: true, autocomplete: "groupId",class:"form-control form-control-lg col mb-3", id:"idGrupo", placeholder:"Codigo" %>
                        </div>
                        <div class="col-sm-8">
                            <%= f.text_field :name, autofocus: true, autocomplete: "groupName",class:"form-control form-control-lg col mb-3", id:"nombreGrupo", placeholder:"Nombre" %>
                        </div>
                    </div>
                    <div class="row justify-content-center">
                        <div class="col-sm-8">
                            <div class="input-group">
                                <label class="col-sm-12" style="font-size: 20px">Descripci√≥n</label>
                                <%= f.text_area :description, autofocus: true, autocomplete: "groupDescription",class:"form-control form-control-lg col mb-3", id:"descripcionGrupo" %>
                            </div>

                        </div>
                    </div>
                    <div class="row justify-content-center">
                        <%= f.submit "Aceptar",class:"btn btn-secondary col-sm-2 mb-3", id:"btnAceptar" %>
                        &nbsp
                        <button type="reset" class="btn btn-secondary col-sm-2 mb-3" id="btnLimpiar">Limpiar</button>
                    </div>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>