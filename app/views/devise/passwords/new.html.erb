<h2>¿Olvidó su contraseña?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="row">
    <div class="col-sm-3 mb-3">
      <div class="field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"form-control", placeholder:"Nueva contraseña" %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-3 mb-3"> 
      <div class="actions">
        <%= f.submit "Reset", class:"btn btn-secondary col-sm-4 mb-3"%>
      </div>
    </div>
  </div>

<% end %>
<%= render "devise/shared/links" %>
