<div class="row justify-content-center col mb-3">
    <div class="col-sm-12 aling-self-center">
        <div class="container" id="contenedorLogo">
            <div class="row justify-content-center">
                <div class="col-sm-12 col mb-3">
                    <h2 style="text-align: center">MODIFICAR PRESTAMO</h2>
                </div>
                <div class="col-sm-6">
                    <h2 style="text-align: center">MODIFICAR</h2>
                    
                    
                    
                    
                    
                    <%=form_with url: "/loan/actualizeLoan" do |g| %>
                        <div class="row justify-content-center">
                            <div class="col-sm-8">
                                <input class="form-control form-control-lg col mb-3" id="codigoEstudianteM"
                                    placeholder="Codigo">
                            </div>
                            <div class="col-sm-8">
                                <select class="form-control form-control-lg col mb-3" id="idElementoM">
                                    <option>Elemento</option>
                                </select>
                            </div>
                        </div>
                        <div class="row justify-content-center">
                            <div class="col-sm-8">
                                <div class="input-group">
                                    <label class="col-sm-12" style="font-size: 20px">Fecha</label>
                                    <input class="form-control form-control-lg col mb-3" type="date"
                                        id="fechaPrestamoM">
                                </div>
                            </div>
                            <div class="col-sm-8">
                                <div class="input-group">
                                    <label class="col-sm-12" style="font-size: 20px">Hora</label>
                                    <input class="form-control form-control-lg col mb-3" type="time" id="horaPrestamoM">
                                </div>
                            </div>
                        </div>
                        <div class="row justify-content-center">
                            <div class="col-sm-4">
                                <%= f.submit "Aceptar",class:"btn btn-secondary", id:"btnAceptar" %>
                            </div>
                            <div class="col-sm-4">
                                <button class="btn btn-secondary" type="reset">Limpiar</button>
                                <p></p>
                            </div>
                        </div>
                    <%end%>
                    
                    
                    
                    <form>
                        <div class="row justify-content-center">
                            <div class="col-sm-8">
                                <input class="form-control form-control-lg col mb-3" id="codigoEstudianteM"
                                    placeholder="Codigo">
                            </div>
                            <div class="col-sm-8">
                                <select class="form-control form-control-lg col mb-3" id="idElementoM">
                                    <option>Elemento</option>
                                </select>
                            </div>
                        </div>
                        <div class="row justify-content-center">
                            <div class="col-sm-8">
                                <div class="input-group">
                                    <label class="col-sm-12" style="font-size: 20px">Fecha</label>
                                    <input class="form-control form-control-lg col mb-3" type="date"
                                        id="fechaPrestamoM">
                                </div>
                            </div>
                            <div class="col-sm-8">
                                <div class="input-group">
                                    <label class="col-sm-12" style="font-size: 20px">Hora</label>
                                    <input class="form-control form-control-lg col mb-3" type="time" id="horaPrestamoM">
                                </div>
                            </div>
                        </div>
                        <div class="row justify-content-center">
                            <div class="col-sm-4">
                                <button class="btn btn-secondary" id="aceptar">Aceptar</button>
                            </div>
                            <div class="col-sm-4">
                                <button class="btn btn-secondary" type="reset">Limpiar</button>
                                <p></p>
                            </div>
                        </div>
                    </form>








                </div>
                <div class="col-sm-6">
                    <div class="container" style="background: rgba(225, 222, 215,0.4)">
                        <h5 style="text-align: center">PRESTAMOS</h5>
                        <table class="table">
                            <thead class="thead-dark">
                                <tr>
                                    <th scope="col">Estudiante</th>
                                    <th scope="col">Elemento</th>
                                </tr>
                            </thead>
                            <tbody id="tablaPrestamo">
                            </tbody>
                        </table>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>